<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PackAsTool>true</PackAsTool>
		<OutputType>Exe</OutputType>
		<TargetFramework>netcoreapp2.1</TargetFramework>
		<ToolCommandName>android</ToolCommandName>
		<AssemblyName>android</AssemblyName>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PreserveCompilationContext>true</PreserveCompilationContext>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>AndroidSdk.Tool</PackageId>
		<PackageVersion>0.2</PackageVersion>
		<Title>Global .NET Android SDK Tool</Title>
		<PackageDescription>Global dotnet tool for Android SDK related tasks.</PackageDescription>
		<Authors>Redth</Authors>
		<Owners>Redth</Owners>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.CommandLine" Version="2.0.0-beta1.20071.2" />
		<PackageReference Include="System.CommandLine.DragonFruit" Version="0.3.0-alpha.20070.2" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\AndroidSdk\AndroidSdk.csproj" />
	</ItemGroup>

</Project>